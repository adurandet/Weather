<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SearchEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_stroke_grey_rounded</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">@dimen/standard_drawable_padding</item>
        <item name="android:padding">@dimen/standard_edit_text_padding</item>
        <item name="editTextStyle">@style/textNormal</item>
    </style>

    <style name="textH1" >
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="textH2" >
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textNormal" >
        <item name="android:textSize">16sp</item>
    </style>

    <style name="standard_card_view">
        <item name="cardCornerRadius">@dimen/standard_radius</item>
        <item name="contentPadding">@dimen/standard_padding</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

</resources>
